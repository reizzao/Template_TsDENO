{
  "deno.importMap": "./import_map.json",
  "tasks": {
    "run": "deno run --watch -A --import-map import_map.json src/Main.ts",
    "test": "deno test -A --watch --import-map import_map.json",
    "tester": "deno run -A --watch --import-map import_map.json ./Main.tester.ts",
    "server_gql": "deno run -A src/main.ts",
    "server_rest": "deno run --watch -A --import-map import_map.json src/server.rest.express.ts"
  },
  "imports": {
    "serverTest": "https://deno.land/x/expect@v0.2.10/expect.ts",
    "serverRest": "npm:express@4.18.2",
  },
  "vendor": true,

  "fmt": {
    "option": {
      "useTabs": true,
      "lineWidth": 120,
      "indentWidth": 2,
      "semiColons": false,
      "singleQuote": true,
      "proseWrap": "preserve"
    },
    "lint": {
      "include": ["src/"],
      "exclude": ["zzz/**/*.ts", "data/fixtures/**/*.ts"],
      "rules": {
        "tags": ["recommended"],
        "include": [],
        "exclude": ["no-unused-vars", "no-explicit-any"]
      }
    }
  }
}
// "no-unused-vars", "no-explicit-any"
